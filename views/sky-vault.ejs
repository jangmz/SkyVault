<p>Hello, <%= user.username %></p>
<% if(fileList.length !== 0) { %>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Size</th>
                <th scope="col">Created</th>
            </tr>
        </thead>
        <tbody>
            <% fileList.map(file => { %>
                <tr>
                    <td><%= file.name %></td>
                    <td><%= file.size %> KB</td>
                    <td><%= file.created %></td>
                </tr>
            <% }) %>
        </tbody>
        
    </table>
<% } else { %>
    <p>No files.</p>
<% } %>